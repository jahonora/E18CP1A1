<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Owner</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.user.name %></td>
        <td><%= link_to 'Comprar', product, class: "btn btn-success" %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) if can_modify?(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } if can_modify?(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
